{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "aws_region": "us-gov-west-1"
  },

  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "{{user `aws_region`}}",
      "source_ami_filter": {"filters": {"name": "ascent-base-*"}, "most_recent": true},
      "instance_type": "t2.micro",
      "associate_public_ip_address": true,
      "vpc_id": "{{user `vpc_id`}}",
      "subnet_id": "{{user `subnet_id`}}",
      "ssh_username": "ec2-user",
      "ami_name": "ascent-grafana {{timestamp}}",
      "tags": {
        "name": "ascent-grafana"
      },
      "snapshot_tags": {
        "name": "ascent-grafana"
      }
    }
  ],

  "provisioners": [
    {
    "type": "file",
    "source": "grafana.ini",
    "destination": "/tmp/grafana.ini"
    },
    {
      "type": "file",
      "source": "prometheus.yaml",
      "destination": "/tmp/prometheus.yaml"
    },
    {
      "type": "shell",
      "scripts": [
        "install-grafana.sh"
      ]
    }
  ]
}
